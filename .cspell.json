{
  "version": "0.2",
  "language": "en,de",
  "dictionaries": ["custom-words"],
  "dictionaryDefinitions": [
    {
      "name": "custom-words",
      "path": "./.cspell-words.txt",
      "addWords": true
    }
  ],
  "words": [
    "HACS",
    "hassfest",
    "homeassistant",
    "aiohttp",
    "asyncio",
    "pytest",
    "mypy",
    "Ruff",
    "pylint",
    "API",
    "APIs",
    "JSON",
    "YAML",
    "MQTT",
    "WiFi",
    "Xerolux",
    "Violet",
    "Changelog",
    "poolcontroller",
    "README",
    "Github",
    "workflow",
    "workflows",
    "virtualenv",
    "venv",
    "pyproject",
    "toml",
    "datetime",
    "timedelta",
    "config",
    "const",
    "async",
    "await",
    "bool",
    "str",
    "dict",
    "int",
    "float",
    "IoT",
    "UUID",
    "CLI",
    "repo",
    "frontend",
    "backend",
    "webhook",
    "webhooks",
    "username",
    "auth",
    "oauth",
    "Dependabot",
    "dependabot",
    "automations",
    "lovelace",
    "integrations",
    "addon",
    "addons",
    "mqtt",
    "http",
    "https",
    "localhost",
    "init",
    "repr",
    "dataclass",
    "metadata",
    "refactor",
    "endif",
    "templating",
    "uninstall",
    "semver",
    "changelog"
  ],
  "ignoreWords": [
    "pyc",
    "pycache",
    "gitignore"
  ],
  "ignorePaths": [
    "node_modules/**",
    ".git/**",
    "**/__pycache__/**",
    "**/*.pyc",
    ".vscode/**",
    ".idea/**",
    "*.min.js",
    "package-lock.json",
    "yarn.lock",
    ".github/workflows/*.yml",
    "custom_components/**/manifest.json"
  ],
  "ignoreRegExpList": [
    "/\\b[A-Z]{2,}\\b/g",
    "/\\b[a-f0-9]{32,}\\b/gi",
    "/https?:\\/\\/[\\w\\-\\.]+(:\\d+)?(\\/[\\S]*)?/gi",
    "/\\$\\{[^}]+\\}/g"
  ],
  "allowCompoundWords": true,
  "caseSensitive": false
}
