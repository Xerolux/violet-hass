extends: default  # Use default rules, you can extend or customize them.

rules:
  line-length: 
    max: 120  # Set max line length to 120 characters.
    level: warning
  indentation: 
    spaces: 2  # Use 2 spaces for indentation.
  trailing-spaces: 
    level: error  # Disallow trailing spaces.
  document-start: 
    level: warning  # Require `---` at the beginning of YAML files.
  truthy:
    level: error  # Disallow unquoted true/false/null, i.e., force quotes for booleans.
  comments:
    level: warning  # Warn if comments are not formatted correctly.